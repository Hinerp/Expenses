@{
    ViewData["Title"] = "Home Page";
}
@model List<Expense>

<div class="text-center">
    <h1>Wydatki</h1>
    
    <table class="table">
        <tr>
            <th>
                Description
            </th>
            <th>
                Cost
            </th>
            <th>
                Category
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Amount
                </td>
                <td>
                    @item.Category.Name
                </td>
            </tr>
        }
    </table>
</div>