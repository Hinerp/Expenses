@{
ViewData["Title"] = "Home Page";
}
@model List<Expense>

<div class="text-center">
    <h1>Expenses</h1>
    <a asp-action="AddExpense" class="btn btn-info">Add Expense</a> <br/>
    <input placeholder="Filter Expenses by Name" asp-action="Index" asp-route-filter=""/> 
    <table class="table">
        <tr>
            <th>
                Description
            </th>
            <th>
                Category
            </th>
            <th>
                Cost
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr class="clickable-row" onclick="location.href='@Url.Action("Details", "Home", new { ExpenseId = item.Id })'">
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Category.Name
                </td>
                <td>
                    @item.Amount
                </td>
            </tr>
        }
    </table>
</div>