<div class="text-center">
    <h1>Wydatki</h1>

    <table class="table">
        <tr>
            <th>
                Description
            </th>
            <th>
                Category
            </th>
            <th>
                Cost
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr class="clickable-row" onclick="location.href='@Url.Action("Details", "Home", new { ExpenseId = item.Id })'">
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Category.Name
                </td>
                <td>
                    @item.Amount
                </td>
            </tr>
        }
    </table>
</div>